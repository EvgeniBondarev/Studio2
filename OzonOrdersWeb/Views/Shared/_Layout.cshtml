<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OzonOrdersWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OzonOrdersWeb.styles.css" asp-append-version="true" />
    <style>
        .pagination-wrapper {
            display: flex;
            align-items: center; 
        }

        /* Для веб-браузеров на основе WebKit (Chrome, Safari) */
        ::-webkit-scrollbar {
            width: 7px; /* Ширина вертикальной полосы прокрутки */
            height: 7px; /* Высота горизонтальной полосы прокрутки */
        }

        ::-webkit-scrollbar-track {
            background: transparent; /* Фон полосы прокрутки */
        }

        ::-webkit-scrollbar-thumb {
            background: rgba(0, 0, 0, 0.3); /* Цвет ползунка прокрутки */
        }

        /* Для Firefox */
        scrollbar-width: thin;
        scrollbar-color: rgba(0, 0, 0, 0.5) transparent;
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Studio2</a>
                <!-- <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Studio2</a>-->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>


                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <!-- Левый блок -->
                    <ul class="navbar-nav flex-grow-1 d-flex justify-content-start">

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <div class="btn-group">
                                    <button type="button" class="btn btn-defult">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="" asp-action="">Админ-панель</a>
                                    </button>
                                    <button type="button" class="btn btn-defult dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
                                        <span class="visually-hidden">Toggle Dropdown</span>
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-area="" asp-controller="OzonClients" asp-action="Index">Клиенты</a></li>
                                        <li><a class="dropdown-item" asp-area="" asp-controller="Job" asp-action="Index">Автоматическая подгрузка заказов</a></li>
                                        <li><a class="dropdown-item" asp-area="" asp-controller="User" asp-action="UserList">Менеджер пользователей</a></li>
                                        <li><a class="dropdown-item" asp-area="" asp-controller="UserAccesses" asp-action="Index">Права доступа пользователей</a></li>
                                        <li><a class="dropdown-item" asp-area="" asp-controller="Manufacturers" asp-action="Index">Производители</a></li>
                                        <li><a class="dropdown-item" asp-area="" asp-controller="Supplier" asp-action="Index">Поставщики</a></li>
                                        <li><a class="dropdown-item" asp-area="" asp-controller="AppStatus" asp-action="Index">Статусы</a></li>
                                        <li><a class="dropdown-item" asp-area="" asp-controller="ColumnMappings" asp-action="Index">Сопоставления</a></li>
                                        <li><a class="dropdown-item" href="/Hangfire" target="_blank">Задачи</a></li>
                                        <li><a class="dropdown-item" href="https://member5.smarterasp.net/cp/mssql_autologin?id=6DDF5CE25EDB5A30267F81A1967A495D" target="_blank">База данных</a></li>
                                    </ul>
                                </div>
                            </li>
                        }
                    </ul>

                    <!-- Центральный блок -->
                    <ul class="navbar-nav flex-grow-1 d-flex justify-content-center">
                        <!-- Здесь можно добавить другие элементы, которые должны располагаться по центру -->

                       <li class="nav-item" style="display: flex; justify-content: space-between; align-items: center;">
                            <div style="display: flex; align-items: center;">
                                <a asp-area="" asp-controller="Orders" asp-action="Index" title="Заказы">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-table" viewBox="0 0 16 16">
                                        <path d="M0 2a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2zm15 2h-4v3h4zm0 4h-4v3h4zm0 4h-4v3h3a1 1 0 0 0 1-1zm-5 3v-3H6v3zm-5 0v-3H1v2a1 1 0 0 0 1 1zm-4-4h4V8H1zm0-4h4V4H1zm5-3v3h4V4zm4 4H6v3h4z"/>
                                    </svg>
                                </a>
                                <p>&nbsp;&nbsp;</p>
                                <a asp-area="" asp-controller="Orders" asp-action="IndexV2" title="Новая версия">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-table" viewBox="0 0 16 16">
                                        <path d="M0 2a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2zm15 2h-4v3h4zm0 4h-4v3h4zm0 4h-4v3h3a1 1 0 0 0 1-1zm-5 3v-3H6v3zm-5 0v-3H1v2a1 1 0 0 0 1 1zm-4-4h4V8H1zm0-4h4V4H1zm5-3v3h4V4zm4 4H6v3h4z"/>
                                    </svg>
                                    .v2
                                </a>
                                 <p>&nbsp;&nbsp;</p>
                                 <a asp-area="" asp-controller="Transaction" asp-action="Index" title="Журнал документов">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-book" viewBox="0 0 16 16">
                                        <path d="M1 2.828c.885-.37 2.154-.769 3.388-.893 1.33-.134 2.458.063 3.112.752v9.746c-.935-.53-2.12-.603-3.213-.493-1.18.12-2.37.461-3.287.811zm7.5-.141c.654-.689 1.782-.886 3.112-.752 1.234.124 2.503.523 3.388.893v9.923c-.918-.35-2.107-.692-3.287-.81-1.094-.111-2.278-.039-3.213.492zM8 1.783C7.015.936 5.587.81 4.287.94c-1.514.153-3.042.672-3.994 1.105A.5.5 0 0 0 0 2.5v11a.5.5 0 0 0 .707.455c.882-.4 2.303-.881 3.68-1.02 1.409-.142 2.59.087 3.223.877a.5.5 0 0 0 .78 0c.633-.79 1.814-1.019 3.222-.877 1.378.139 2.8.62 3.681 1.02A.5.5 0 0 0 16 13.5v-11a.5.5 0 0 0-.293-.455c-.952-.433-2.48-.952-3.994-1.105C10.413.809 8.985.936 8 1.783"/>
                                    </svg>
                                </a>
                                <p>&nbsp;&nbsp;</p>
                            </div>

                            @if (User.IsInRole("User") || User.IsInRole("Admin"))
                            {
                                <a asp-area="" asp-controller="Orders" asp-action="Upload" title="Загрузить заказы">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-download" viewBox="0 0 16 16">
                                        <path d="M.5 9.9a.5.5 0 0 1 .5.5v2.5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-2.5a.5.5 0 0 1 1 0v2.5a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2v-2.5a.5.5 0 0 1 .5-.5" />
                                        <path d="M7.646 11.854a.5.5 0 0 0 .708 0l3-3a.5.5 0 0 0-.708-.708L8.5 10.293V1.5a.5.5 0 0 0-1 0v8.793L5.354 8.146a.5.5 0 1 0-.708.708z" />
                                    </svg>
                                </a>
                                <p>&nbsp;&nbsp;</p>
                                <a asp-area="" asp-controller="Orders" asp-action="Update" title="Обновить таблицу">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-arrow-clockwise" viewBox="0 0 16 16">
                                        <path fill-rule="evenodd" d="M8 3a5 5 0 1 0 4.546 2.914.5.5 0 0 1 .908-.417A6 6 0 1 1 8 2z" />
                                        <path d="M8 4.466V.534a.25.25 0 0 1 .41-.192l2.36 1.966c.12.1.12.284 0 .384L8.41 4.658A.25.25 0 0 1 8 4.466" />
                                    </svg>
                                </a>
                                <a asp-area="" asp-controller="Orders" asp-action="UpdateV2" title="Обновить таблицу">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-arrow-clockwise" viewBox="0 0 16 16">
                                        <path fill-rule="evenodd" d="M8 3a5 5 0 1 0 4.546 2.914.5.5 0 0 1 .908-.417A6 6 0 1 1 8 2z" />
                                        <path d="M8 4.466V.534a.25.25 0 0 1 .41-.192l2.36 1.966c.12.1.12.284 0 .384L8.41 4.658A.25.25 0 0 1 8 4.466" />
                                    </svg>
                                    .v2
                                </a>
                                <p>&nbsp;&nbsp;</p>
                                <a asp-area="" asp-controller="Orders" asp-action="DeleteDuplicateOrders" title="Удалить дубли">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                        <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z" />
                                        <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z" />
                                    </svg>
                                </a>
                                <p>&nbsp;&nbsp;</p>
                                <a asp-area="" asp-controller="MatchFileData" asp-action="Index" title="Сравнение файлов">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-files" viewBox="0 0 16 16">
                                        <path d="M13 0H6a2 2 0 0 0-2 2 2 2 0 0 0-2 2v10a2 2 0 0 0 2 2h7a2 2 0 0 0 2-2 2 2 0 0 0 2-2V2a2 2 0 0 0-2-2m0 13V4a2 2 0 0 0-2-2H5a1 1 0 0 1 1-1h7a1 1 0 0 1 1 1v10a1 1 0 0 1-1 1M3 4a1 1 0 0 1 1-1h7a1 1 0 0 1 1 1v10a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1z" />
                                    </svg>
                                </a>
                            }
                        </li>


                    </ul>

                    <!-- Правый блок -->
                    <ul class="navbar-nav flex-grow-1 d-flex justify-content-end">
                        
                    </ul>
                </div>
            </div>


            
            <partial name="_LoginPartial" />
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - OzonOrdersWeb - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<script>
    function updateTable() {
        var button = document.getElementById('updateButton');
        var spinner = document.getElementById('spinner');
        var buttonText = document.getElementById('buttonText');

        button.disabled = true;
        spinner.classList.remove('visually-hidden');
        buttonText.textContent = 'Обновление...';

    }
</script>