@using OzonDomains.Models

@model OzonDomains.Models.AppStatus


@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>Добавить новый статус</h1>

@{
    string uploadResultPeriod = (string)ViewData["StatusResult"];
}

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>


@if (uploadResultPeriod != null)
{
    <div class="alert alert-dismissible alert-success">
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        <p>@uploadResultPeriod</p>
    </div>
}

<div class="row">
    <div class="col-md-4">

        <form asp-action="Create" asp-controller="AppStatus" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


