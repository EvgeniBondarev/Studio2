@using OzonDomains.Models
@model UserAccess

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Создание права доступа</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <br />
            <br />
            <div class="form-group">
                <label asp-for="AvailableOrderColumns" class="control-label">Доступные столбцы в таблице заказов</label>
                <br />
                @foreach (var column in ViewData["AvailableOrderColumns"] as List<string>)
                {
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="AvailableOrderColumns" value="@column" checked="checked"/> @column
                        </label>
                    </div>
                }
                <span asp-validation-for="AvailableOrderColumns" class="text-danger"></span>
            </div>
            <br />
            <br />
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
